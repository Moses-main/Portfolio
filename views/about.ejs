<body class="bg-gray-100 text-gray-900 leading-normal tracking-normal">

  <!-- Navbar -->
  <nav class="bg-blue-600 p-4 shadow-md">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Your logo or name here -->
      <a href="#" class="text-xl font-bold text-white">Your Name</a>

      <!-- Mobile navigation button -->
      <button class="md:hidden text-white">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Navigation links -->
      <div class="hidden md:flex space-x-4">
        <a href="about.html" class="text-white hover:text-gray-200">About</a>
        <a href="portfolio" class="text-white hover:text-gray-200">Portfolio</a>
        <a href="#contact" class="text-white hover:text-gray-200">Contact</a>
        <!-- Add more navigation links as needed -->
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <header class="bg-gradient-to-r from-blue-500 to-blue-700 py-16 relative">
    <!-- SVG background pattern for profile picture -->
    <div class="absolute inset-0 profile-bg"></div>
    <div class="container mx-auto text-center">
      <img src="your-image.jpg" alt="Your Name" class="w-32 h-32 rounded-full mx-auto mb-4">
      <h1 class="text-white text-4xl font-bold mb-4">Hello, I'm Your Name</h1>
      <p class="text-white text-lg">I am a passionate web developer.</p>
      <!-- Add a call-to-action button if needed -->
      <div class="mt-8">
        <a href="#about" class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded">Learn More</a>
      </div>
    </div>
  </header>

  <!-- About Section -->
  <section id="about" class="py-16 bg-teal-500 text-white">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-8">About Me</h2>
      <p class="mb-4">Write a brief introduction about yourself here.</p>
      <div class="hidden md:block">
        <!-- Hidden text revealed on larger screens -->
        <p class="mb-4">Add more details about yourself here.</p>
      </div>
      <button class="mt-4 md:hidden bg-teal-600 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded"
        id="showMore">Show More</button>
      <!-- Hidden text revealed on smaller screens -->
      <div class="hidden text-center mt-4 md:block" id="hiddenText">
        <p>Add more details about yourself here.</p>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section id="portfolio" class="py-16 bg-peach-500 text-white">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-8">Portfolio</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <!-- Add your portfolio projects here -->
        <!-- Use image cards or links to the projects -->
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-teal-500 text-white">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-8">Contact</h2>
      <p class="mb-4">Get in touch with me:</p>
      <!-- Add a contact form or contact information -->
      <div class="flex space-x-4 text-3xl">
        <!-- Replace the "#" with your actual social media links -->
        <a href="#" class="hover:text-teal-400"><i class="fab fa-twitter"></i></a>
        <a href="#" class="hover:text-teal-400"><i class="fab fa-linkedin"></i></a>
        <a href="#" class="hover:text-teal-400"><i class="fab fa-github"></i></a>
        <!-- Add more social media handles as needed -->
      </div>
    </div>
  </section